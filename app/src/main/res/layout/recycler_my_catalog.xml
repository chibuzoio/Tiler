<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/generic_card_view"
    android:id="@+id/myCatalogTileLayout"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/myCatalogTileImage"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/myCatalogTileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/myCatalogTileName"
        android:textSize="15.333sp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="7dp"
        android:textColor="@color/genericBlackColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myCatalogTileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>


