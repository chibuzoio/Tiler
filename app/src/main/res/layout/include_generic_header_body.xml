<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingHorizontal="11.111dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/genericHeader"
        android:textStyle="bold"
        android:textSize="15.333dp"
        android:layout_marginTop="5dp"
        android:text="Header Should be here"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/genericBlackColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/genericBody"
        android:textSize="15.333dp"
        android:layout_marginTop="3dp"
        android:text="Body should be here"
        app:layout_constraintTop_toBottomOf="@id/genericHeader"
        android:textColor="@color/genericBlackColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>


