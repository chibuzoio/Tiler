<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/totalSquareMeterCalculator"
        layout="@layout/include_generic_header"/>

    <include
        android:id="@+id/numberOfCartonsInput"
        android:layout_marginTop="15.333dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/totalSquareMeterCalculator"
        layout="@layout/include_generic_number_decimal_form"/>

    <include
        android:id="@+id/numberOfPiecesInput"
        android:layout_marginTop="15.333dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/numberOfCartonsInput"
        layout="@layout/include_generic_number_decimal_form"/>

    <include
        android:id="@+id/cartonSquareMeterInput"
        android:layout_marginTop="15.333dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/numberOfPiecesInput"
        layout="@layout/include_generic_number_decimal_form"/>

    <include
        android:id="@+id/numberOfPiecesPerCarton"
        android:layout_marginTop="15.333dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cartonSquareMeterInput"
        layout="@layout/include_generic_number_decimal_form"/>

    <include
        android:id="@+id/calculateTotalSquareMeter"
        android:layout_height="41dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="11.111dp"
        app:layout_constraintTop_toBottomOf="@id/numberOfPiecesPerCarton"
        layout="@layout/include_generic_button"/>

    <include
        android:id="@+id/calculationResultLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="17.555dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="11.111dp"
        app:layout_constraintTop_toBottomOf="@id/calculateTotalSquareMeter"
        layout="@layout/include_calculation_result"/>

    <include
        android:id="@+id/includedHeader"
        layout="@layout/include_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>


