<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/squareMeterCalculator"
        layout="@layout/include_generic_header"/>

    <include
        android:id="@+id/tileLengthInput"
        android:layout_marginTop="15.333dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/squareMeterCalculator"
        layout="@layout/include_generic_number_form"/>

    <include
        android:id="@+id/tileWidthInput"
        android:layout_marginTop="15.333dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tileLengthInput"
        layout="@layout/include_generic_number_form"/>

    <include
        android:id="@+id/numberOfPiecesPerCartonInput"
        android:layout_marginTop="15.333dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tileWidthInput"
        layout="@layout/include_generic_number_form"/>

    <include
        android:id="@+id/calculateSquareMeter"
        android:layout_height="41dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="11.111dp"
        app:layout_constraintTop_toBottomOf="@id/numberOfPiecesPerCartonInput"
        layout="@layout/include_generic_button"/>

    <include
        android:id="@+id/includedHeader"
        layout="@layout/include_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>


